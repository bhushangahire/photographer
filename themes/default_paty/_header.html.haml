#header
  %h1
    = link_to((@config.company_name), '/', :title => (@config.company_name))
  %ul.nav
    %li
      = link_to('Galleries', galleries_path, :title => 'Photo Galleries', :class => "#{'active' if controller.controller_name == 'galleries'}".html_safe)
    - for page in @pages
      %li
        = link_to((page.title), page_path(page), :title => (page.title), :class => "#{'active' if @page and @page.id == page.id}".html_safe)
    - unless @config.blog_url.blank?
      %li
        = link_to('Blog', @config.blog_url, :title => 'Photography Blog')
